<?xml version="1.0" encoding="UTF-8" ?>
<nifty>

    <useControls filename="nifty-default-controls.xml"/>
    <screen id="start" controller="com.trashsoftware.gui.MainViewController">
        <layer id="background" childLayout="center">
            
            <!-- This layer is for the control bars at the bottom -->
            <panel id="controlBar" height="5%" width="75%" align="left" valign="bottom"
                   childLayout="horizontal" backgroundColor="#777777">

                <panel id="panel" height="80%" width="5%" align="center" valign="center"
                       backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                    <interact onClick="playPauseAction()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#f600"
                                 endColor="#ffff" post="true"/>
                    </effect>
                    <control name="label" id="playPauseText" color="#000f" 
                             font="aurulent-sans-16.fnt" text="||"
                          align="center" valign="center"/>
                </panel>
                
                <control name="label" id="speedLabel" height="80%" width="5%"
                         text="1.0x" font="aurulent-sans-16.fnt" color="#FFFFFF"/>

                <panel id="spacer" width="1%" height="80%" backgroundColor="#0000" childLayout="center"/>
                
                <panel id="panel" height="80%" width="5%" align="center" valign="center"
                       backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                    <interact onClick="speedDownAction()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#f600"
                                 endColor="#ffff" post="true"/>
                    </effect>
                    <text id="text" color="#000f" font="aurulent-sans-16.fnt" text="&lt;&lt;"
                          align="center" valign="center"/>
                </panel>

                <panel id="spacer" width="1%" height="80%" backgroundColor="#0000" childLayout="center"/>
                
                <panel id="panel" height="80%" width="5%" align="center" valign="center"
                       backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                    <interact onClick="speedUpAction()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#f600"
                                 endColor="#ffff" post="true"/>
                    </effect>
                    <text id="text" color="#000f" font="aurulent-sans-16.fnt" text="&gt;&gt;"
                          align="center" valign="center"/>
                </panel>
            </panel>

            <!-- This layer is for the info pane on the right -->
            <panel id="infoPane" height="100%" width="25%" align="right" valign="top"
                   childLayout="vertical" backgroundColor="#777777">
                <control name="label" id="infoLabel" font="aurulent-sans-16.fnt" color="#FFFFFF"
                         text="Info Pane Area"/>
            </panel>

            <!--            <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">-->
